{
    "rewrites": [
        {
            "source": "/product/:id",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(facebookexternalhit|facebot|twitterbot|linkedinbot|slackbot|discordbot|telegrambot|pinterestbot|pinterest|googlebot|bingbot|duckduckbot|yandex(bot)?|baiduspider|slurp).*"
                }
            ],
            "destination": "/api/og-product?id=:id"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/product/(.*)",
            "headers": [
                { "key": "Cache-Control", "value": "no-store" },
                { "key": "Vary", "value": "User-Agent" }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
