{
    "routes": [
        {
            "src": "/product/(?<id>[^/]+)",
            "has": [
                { "type": "header", "key": "user-agent", "value": "(?i)(bot|facebookexternalhit|facebot|twitterbot|linkedinbot|slackbot|whatsapp|googlebot)" }
            ],
            "dest": "/api/og-product?id=$id"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
